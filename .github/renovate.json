{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "addLabels": [
        "ok-to-test"
    ],
    "baseBranchPatterns": [
        "/(^main$)|(^backplane-(2\\.(6|7|8|9|[1-9][0-9]+)|[3-9]\\.\\d+)$)/"
    ],
    "rebaseWhen": "behind-base-branch",
    "recreateWhen": "never",
    "schedule": [
        "before 8am on tuesday and thursday"
    ],
    "timezone": "America/New_York"
}
